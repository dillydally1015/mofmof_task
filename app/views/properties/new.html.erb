<h1>物件登録</h1>
<%= form_with(model: @property, local: true) do |f| %>
  <%= f.label :property_name, '物件名' %><br>
  <%= f.text_field :property_name %><br>
  <%= f.label :rent, '賃料' %><br>
  <%= f.text_field :rent %>円<br>
  <%= f.label :address, '住所' %><br>
  <%= f.text_field :address %><br>
  <%= f.label :age, '築年数' %><br>
  <%= f.text_field :age %>年<br>
  <%= f.label :note, '備考' %><br>
  <%= f.text_area :note %><br>

  <hr>

  <h4>最寄り駅1</h4>
  <%= f.fields_for :nearest_station1 do |ns1| %>
    <%= ns1.label :route_name, '路線名' %><br>
    <%= ns1.text_field :route_name %><br>
    <%= ns1.label :station_name, '駅名' %><br>
    <%= ns1.text_field :station_name %><br>
    <%= ns1.label :time, '徒歩分数' %><br>
    <%= ns1.text_field :time %>分<br>
  <% end %>

  <h4>最寄り駅2</h4>
  <%= f.fields_for :nearest_station2 do |ns2| %>
    <%= ns2.label :route_name, '路線名' %><br>
    <%= ns2.text_field :route_name %><br>
    <%= ns2.label :station_name, '駅名' %><br>
    <%= ns2.text_field :station_name %><br>
    <%= ns2.label :time, '徒歩分数' %><br>
    <%= ns2.text_field :time %>分<br>
  <% end %>

  <%= f.submit '登録する' %><br>
<% end %>
<%= link_to '戻る', properties_path %>
